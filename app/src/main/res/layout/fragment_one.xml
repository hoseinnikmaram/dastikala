<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_one"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@color/mode_background_when_selected"

    tools:context="com.dastsaz.dastsaz.fragments.OneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            app:cardCornerRadius="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tx_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:gravity="right|top"
                    android:scrollbars="horizontal"
                    android:textColor="#E60000"
                    android:textSize="25sp"

                    />
                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"

                    android:gravity="right|center"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:scrollbars="horizontal"
                    android:textColor="@color/theme_color_highlight"

                    android:textSize="17sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:paddingBottom="5dp"

                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:id="@+id/tx_loction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:layout_marginLeft="30dp"
                        android:scrollbars="horizontal"
                        android:gravity="right|center"
                        android:layout_gravity="right"                        android:textSize="17sp"
                        android:textColor="@color/theme_color_highlight"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:layout_gravity="right"
                        android:text=" , "
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tx_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:layout_gravity="right"                        android:textSize="17sp"
                        android:enabled="true"
                        android:textColor="@color/theme_color_highlight"
                        android:scrollbars="horizontal" />





                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:layout_gravity="right|center"
                android:gravity="right">
                <TextView
                    android:id="@+id/tx_Sub_daste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:enabled="true"
                    android:scrollbars="horizontal"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:layout_margin="5dp"

                    android:textColor="@color/cardview_dark_background"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tx_daste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:enabled="true"
                    android:scrollbars="horizontal"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="17sp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"></LinearLayout>
                <TextView
                    android:id="@+id/tx_view_namedaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="گروه "
                    android:textColor="@color/theme_color_highlight"
                    android:textSize="17sp" />



            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_gravity="right|center"
                android:gravity="center|right">
                <TextView
                    android:id="@+id/tx_description"
                    android:layout_width="wrap_content"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:scrollbars="horizontal"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:textSize="17sp"
                    android:textColor="@color/cardview_dark_background"

                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"></LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_view_descriptiion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="right|center"
                    android:layout_gravity="right|center"
                    android:text="توضیحات "
                    android:textColor="@color/theme_color_highlight"
                    android:textSize="17sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right|center">

                <TextView
                    android:id="@+id/tx_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:layout_margin="5dp"
                    android:scrollbars="horizontal"
                    android:gravity="right"
                    android:layout_gravity="right|center"
                    android:textSize="17sp"
                    android:textColor="@color/cardview_dark_background"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_view_phon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="شماره تماس "
                    android:textColor="@color/theme_color_highlight"
                    android:textSize="17sp" />



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right|center">
                <TextView
                    android:id="@+id/tx_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:layout_margin="5dp"
                    android:layout_gravity="right|center"

                    android:scrollbars="horizontal"
                    android:gravity="right"
                    android:textSize="17sp"
                    android:textColor="@color/cardview_dark_background"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_view_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="شماره پیامک "
                    android:layout_gravity="right|center"

                    android:textColorHighlight="@color/theme_color_highlight"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:layout_gravity="right|center">

                <TextView
                    android:id="@+id/tx_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:layout_margin="5dp"
                    android:scrollbars="horizontal"
                    android:textSize="17sp"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="right|center"
                    android:layout_gravity="right|center"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"></LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_view_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="قیمت "
                    android:textColor="@color/theme_color_highlight"
                    android:textSize="17sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:cardBackgroundColor="@color/colorAccent"

            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/oncall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone"
                        android:layout_marginRight="6dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:paddingLeft="26dp"
                        android:paddingBottom="0dp"
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="تماس"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="3dp"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"></LinearLayout>
                <LinearLayout
                    android:id="@+id/onsms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sms"
                        android:onClick="OnClickSms"

                        android:layout_marginRight="6dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:paddingLeft="26dp"
                        android:paddingBottom="0dp"
                        tools:ignore="OnClick" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="پیامک"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="3dp"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
